<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    xmlns:text="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/feedDp"
        android:layout_width="35dp"
        android:layout_height="35dp">

        <!--<ImageView
            android:id="@+id/feedPp"
            android:layout_width="35dp"
            android:layout_height="35dp" />-->

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvcreator"
            style="@android:style/TextAppearance.DeviceDefault.Large"
            android:layout_width="fill_parent"
            android:layout_height="26dip"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="Created By"
            android:textColor="@android:color/black"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/tvDescription"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_below="@+id/tvcreator"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Example application"
            android:textColor="@android:color/black"
            android:typeface="serif" />

        <TextView
            android:id="@+id/tvpostid"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tvDescription"
            android:layout_marginLeft="10dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="Post ID"
            android:textColor="@android:color/holo_orange_dark" />
    </LinearLayout>
    </LinearLayout>

</RelativeLayout><!--</android.support.v7.widget.CardView>-->
